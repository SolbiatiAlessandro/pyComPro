import unittest
import template

def test_class(unittest.TestCase):
    def test_basic(self):
        s = template.solve(0, 0)
        self.assertEqual(s, -1)
        print "basicOK"

    def test_regression(self):
        """
        regression testing
            SIZE: number of iterations
            CONTRAINTS: [[a, b], [c, d], [e, f], ..]
        first parameter of solve P1 constraints = [a, b]
        first parameter of solve P2 constraints = [c, d]
        ...
        """
        from random import random as rnd
        from template import solve
        from time import time
        SIZE = 1000
        CONSTRAINTS = [[0, 1000], [1, 1000]]
        t1 = time()
        for _ in xrange(SIZE):
            parameters = [(int(rnd() * (up - down)) + down) for up, down in CONSTRAINTS]
            got = solve(parameters)
            self.assertEqual(got, -1)
        t2 = time()
        print "regressionOK : "+str(t2 - t1)


